@model MvcMovies.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Movie List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
    
</p>
    <form asp-controller="Movies" asp-action="Index">
        <p>
            Title: <input type="text" name="SearchString">
            

            <select asp-for="MovieGenre" asp-items="Model.Genres">
                <option value="">Genre</option>
            </select>
            <input type="submit" value="Filter" />
        </p>

</form>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success btn-sm" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" class="btn btn-info btn-sm" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" class="btn btn-danger btn-sm"  asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
